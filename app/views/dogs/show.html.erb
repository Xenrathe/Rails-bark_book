<p style="color: green"><%= notice %></p>

<%= render @dog %>

<div>
  <%= link_to "Edit this dog", edit_dog_path(@dog) %> |
  <%= link_to "Back to dogs", dogs_path %>

  <% if current_user %>
    <% if current_user.following?(@dog) %>
      <%= link_to 'Unfollow', unfollow_dog_path(@dog), method: :delete, data: {turbo_method: :delete} %>
    <% else %>
      <%= link_to 'Follow', follow_dog_path(@dog), method: :post, data: {turbo_method: :post} %>
    <% end %>
  <% end %>
  
  <%= link_to "Delete entry", @dog, method: :delete, data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete #{@dog.name}'s entry?"} %>
</div>
