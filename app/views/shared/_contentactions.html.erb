<div class="actions">
  <% if current_user && current_user.id == content.user_id %>
    <hr>
    <div class="buttons">
      <%= button_to "EDIT", [:edit, content], method: :get, data: {turbo_method: :get} %>
      <%= button_to "DELETE", content, method: :delete, data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this #{type} post?"} %> 
    </div>
  <% end %>
</div>