<h3> Comments: </h3>
<%= turbo_frame_tag "comments_#{commentable.class.name}_#{commentable.id}" do %>
  <div class="comments">
    <ul>
    <% comments.each do |comment| %>
      <li><%= comment.user.email %>: <%= comment.body %></li>
    <% end %>
    </ul>
  </div>
  <% if current_user %>
    <div class="add-comment-form">
      <%= form_with(model: Comment, id: "new_comment_form_#{commentable.class.name}_#{commentable.id}", remote: true) do |form| %>
        <%= form.text_area :body, placeholder: "Add a comment...", rows: 2 %>
        <%= form.hidden_field :commentable_type, value: commentable.class.name.downcase %>
        <%= form.hidden_field :commentable_id, value: commentable.id %>
        <%= form.submit "Post Comment", class: "btn btn-primary" %>
      <% end %>
    </div>
  <% end %>
<% end %>