<div class="core-window registrations">
  <div class="core-content transparent-bg">
    <div class="title">Change your password</div>
            <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <div class="single-input">
        <%= f.label :password, "New:" %><br />
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
      </div>

      <div class="single-input">
        <%= f.label :password_confirmation, "Confirm:" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Change", class: "simple-btn small test" %>
      </div>
    <% end %>

    <br><%= link_to "Back to login", new_session_path(resource_name) %>
    <%= render "shared/errors", object: resource %>
  </div>
</div>
