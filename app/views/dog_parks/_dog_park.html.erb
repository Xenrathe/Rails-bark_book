<div class="title">
  <%= dog_park.name %> 
  <% if distance %>
    (<%= distance.round(1) %> mi away)
  <% end%>
</div>

<% if include_size %>
  <% size = dog_park.dog_size.humanize.downcase == 'both' ? 'large and small' : dog_park.dog_size.humanize.downcase %>
  For <%= size %> dogs<br><br>
<% end %>

Address:<br>
<%= dog_park.address.address_one %>
<% if dog_park.address.address_two != ''%>
  <br><%= dog_park.address.address_two %>
<% end %>
<br><%= dog_park.address.city %>, <%= dog_park.address.state %> <%= dog_park.address.postal_code %>
<br><%= dog_park.address.country %>